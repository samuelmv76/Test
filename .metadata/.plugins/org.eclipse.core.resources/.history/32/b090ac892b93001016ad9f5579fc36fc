package BibliotecaApp;

import java.util.ArrayList;
import java.util.Scanner;


public class Main {

	public Main() {
		// TODO Auto-generated constructor stub
	}

	public static void main(String[] args) {
		/*
		Debe mostrar un menú en consola con las siguientes opciones:
		1. Añadir libro:
		a. Pedir datos por consola.
		b. Guardarlo en un array de Publicacion[].
		c. Comprobar que no se superan 100 publicaciones.
		2. Añadir revista:
		a. Igual que los libros.
		3. Listar todas las publicaciones:
		a. Recorrer el array e imprimir con toString().
		4. Buscar publicaciones por título:
		a. Pedir al usuario un fragmento del título y mostrar coincidencias.
		5. Contar cuántas publicaciones hay por año:
		a. Mostrar cuántas publicaciones se hicieron en un año dado.
		6. [Opcional] Guardar publicaciones en fichero:
		a. Guardar el contenido del array en un fichero de texto.
		7. [Opcional] Cargar publicaciones desde fichero:
		a. Leer las publicaciones desde el fichero y cargarlas en el array.
		8. Salir. 
		*/
		
		Scanner sc = new Scanner(System.in);
		int res = 0;
		
		ArrayList<String> Publica = new ArrayList<String>();
		
		do {
			System.out.println(""
					+ "1. Añadir libro:\r\n"
					+ "		a. Pedir datos por consola.\r\n"
					+ "		b. Guardarlo en un array de Publicacion[].\r\n"
					+ "		c. Comprobar que no se superan 100 publicaciones.\r\n"
					+ "2. Añadir revista:\r\n"
					+ "		a. Igual que los libros.\r\n"
					+ "3. Listar todas las publicaciones:\r\n"
					+ "		a. Recorrer el array e imprimir con toString().\r\n"
					+ "4. Buscar publicaciones por título:\r\n"
					+ "		a. Pedir al usuario un fragmento del título y mostrar coincidencias.\r\n"
					+ "5. Contar cuántas publicaciones hay por año:\r\n"
					+ "		a. Mostrar cuántas publicaciones se hicieron en un año dado.\r\n"
					+ "6. [Opcional] Guardar publicaciones en fichero:\r\n"
					+ "		a. Guardar el contenido del array en un fichero de texto.\r\n"
					+ "7. [Opcional] Cargar publicaciones desde fichero:\r\n"
					+ "		a. Leer las publicaciones desde el fichero y cargarlas en el array.\r\n"
					+ "8. Salir. ");
			
			switch(res) {
			  case 1:
				  
				  if(Publica.size() >= 100){
					System.out.println("No se pueden aniadir mas Publicaciones");  
				  } else {
				  
				  System.out.println("1. Añadir libro:\\r\\n");
				  	System.out.println("Titulo");
					  	String titulo = sc.nextLine();
					System.out.println("Anio");
						int anio = sc.nextInt();
					Libro libro = new Libro(titulo, anio);
					  libro.setTitulo(titulo);
					  libro.setAnio(anio);
					  //Publica.add(libro);
				  }
				  
				  break;
			  case 2:
				  
				  if(Publica.size() >= 100){
					System.out.println("No se pueden aniadir mas Publicaciones");  
				  } else {
				  
				  System.out.println("2. Añadir revista:\\r\\n");
				  	System.out.println("Titulo");
					  	String titulo = sc.nextLine();
					System.out.println("Anio");
						int anio = sc.nextInt();
						Revista revista = new Revista(titulo,anio);
					  revista.setTitulo(titulo);
					  revista.setAnio(anio);
					  //Publica.add(libro);
				  }
				  
				  
				  break;
			  case 3:
				  System.out.println("3. Listar todas las publicaciones:\\r\\n");
				  sc.next();
				  
				  break;
			  case 4:
				  //llamar al metodo
				  System.out.println("4. Buscar publicaciones por título:\\r\\n");
				  sc.next();
				  
				  break;
			  case 5:
				  System.out.println("5. Contar cuántas publicaciones hay por año:\\r\\n");
				  sc.next();
				  
				  break;
			  case 6:
				  System.out.println("6. [Opcional] Guardar publicaciones en fichero:\\r\\n");
				  sc.next();
				  
				  break;
			  case 7:
				  System.out.println("7. [Opcional] Cargar publicaciones desde fichero:\\r\\n");
				  sc.next();
				  
				  break;
			  default:
			    // code block
			}
			
			res = sc.nextInt();
		}while(res < 8);
		
	}

}
