package Ficheros;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;

public class ficheroTexto {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		leerf();
		escribirFich();
		leerBuffer();
	}
	
	
	static private void escribirFich() {
		
		File fich = new File("fich1.txt");
		
		String cadena = "Probando el filewriter";
		try {
			
			FileWriter f = new FileWriter(fich);
			char[] cad = cadena.toCharArray();
			for(int i=0; i<cad.length; i++) {
				f.write(cad[i]);
			}
			f.close();
		} catch (FileNotFoundException e){
			e.printStackTrace();
		} catch (IOException ioex) {
			
		}
	}
	
	static private void leerf() {
		
		File fich = new File("fich1.txt");
		
		try {
			
			FileReader f = new FileReader(fich);
			
			int i;
			
			while((i = f.read())!= -1) {
				
				System.out.print((char)i);
				
				
			}
			System.out.println();
		} catch (FileNotFoundException e){
			e.printStackTrace();
		} catch (IOException ioex) {
			
		}
	}
	static private void leerBuffer() {
		
		File fich = new File("fich1.txt");
		try {
			BufferedReader br = new BufferedReader((new FileReader(fich)));
			String linea;
			while((linea = br.readLine())!=null){
				System.out.println(linea);
			}
			br.close();
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}  catch (IOException ioex) {
			
		}
	}
	static private void escribirBuffer() {
		File fich = new File("ficht1.txt");
		try {
			
			BufferedWriter bw = new BufferedWriter(new FileWriter(fich));
		
		
		}  catch (FileNotFoundException e) {
			e.printStackTrace();
		}  catch (IOException ioex) {
			
		}
		
	
	
	}
}
